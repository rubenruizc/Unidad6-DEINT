<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01.MainPage">

    <ScrollView>
        <VerticalStackLayout 
            x:Name="VSLButtom"
            Padding="30,0"
            Spacing="25">
            <Button x:Name="bton1" Text="Botón 1" BackgroundColor="Blue" MaximumHeightRequest="70" MaximumWidthRequest="200"
                    FontFamily="Verdana" FontSize="16" FontAttributes="Bold" Margin="5">
            </Button>

            <Button x:Name="bton2" Clicked="clickBton2">

                <Button.Text>Botón 2</Button.Text>
                <Button.BackgroundColor>blue</Button.BackgroundColor>
                <Button.MaximumHeightRequest>70</Button.MaximumHeightRequest>
                <Button.MaximumWidthRequest>200</Button.MaximumWidthRequest>
                <Button.FontFamily>Verdana</Button.FontFamily>
                <Button.FontSize>16</Button.FontSize>
                <Button.FontAttributes>Bold</Button.FontAttributes>
                <Button.Margin>5</Button.Margin>

            </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>